<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal center", method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "modifier mail :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Nouveau mot de passe :", class: "col-md-4 control-label" %><i>(laisser vide si vous désirez conserver votre mot de passe)</i>
    <div class="col-md-4">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation du mot de  passe :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Ancien mot de passe :", class: "col-md-4 control-label" %><i>(Obligatoir pour confirmer les changements)</i>
    <div class="col-md-4">
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

 <center>
    <%= f.submit :Valider, class: 'btn btn-primary' %>
</center>
<% end %>

<h3>Supprimer le compte</h3>

<p>Vous êtes mecontent de notre service? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "êtes vous sûr?" }, method: :delete, class: "btn btn-danger" %></p>

