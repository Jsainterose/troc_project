
<center><%= image_tag("sign_in.jpg",size: "500x500", :alt => "rss feed") %></center>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Email :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Mot de passe :", class: "col-md-4 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characteres minimum)</em>
    <% end %>
    <div class="col-md-4">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <center>
     <%= f.submit :Inscription, class: 'btn btn-primary' %>
  </center>
<% end %>
<br>
<center>
<%= render "devise/shared/links" %>
</center>
