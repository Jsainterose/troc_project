<center><%= image_tag("login.jpg",size: "500x500", :alt => "rss feed") %></center>

<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>


<div class="form-group">
  <%= f.label :email, "Email :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
    </div>
</div>
   


<div class="form-group">
  <%= f.label :password, "Mot de passe :", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
</div>

<center>
  <% if devise_mapping.rememberable? %>
    <div class="checkbox">
      <%= f.check_box :remember_me %> Se souvenir de moi
    </div>
  <% end %>
  <br>
  <%= f.submit :Connexion, class: 'btn btn-primary' %>
 </center>



<% end %>

