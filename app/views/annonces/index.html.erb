<p id="notice"><%= notice %></p>

<h1>Annonces de <%= @app_cat.category_name%></h1>
<br>
<%= form_tag root_path, :method => 'get' do %>
  
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: 'Entrez votre recherche', class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Rechercher",class: "btn btn-primary" %> 
    </span>
    </div>
  
<% end %>
<br>
<div class="row">
<% @annonces.each do |annonce| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag annonce.image.url(:medium) %>
      <div class="caption">
        <h3><%= annonce.title %></h3>
        <p><%= annonce.description %></p>
        <%= link_to '<div class="btn btn-primary">Voir annonce</div>'.html_safe, annonce %>
      </div>
    </div>
  </div>
  <% end %>
</div>


<%= paginate @annonces %>

