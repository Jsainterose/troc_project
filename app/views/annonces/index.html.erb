<p id="notice"><%= notice %></p>

<h1>Annonces</h1>
<form class="navbar-form navbar-left">
<%= form_tag root_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "search" %>
<% end %>
</form>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Location</th>
      <th>Condition</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.title %></td>
        <td><%= annonce.description %></td>
        <td><%= annonce.image_url %></td>
        <td><%= annonce.location %></td>
        <td><%= annonce.condition %></td>
        <td><%= annonce.status %></td>
        <td><%= link_to 'Show', annonce %></td>
      </tr>
    <% end %>
  </tbody>
</table>

